          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{adminToken}}"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/actuator/prometheus",
